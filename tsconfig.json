{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2016", "dom.iterable"],
    "types": ["webpack", "jasmine", "should"]
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist", "metric-report-app", "**/*.e2e.ts"],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "./compiled",
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
